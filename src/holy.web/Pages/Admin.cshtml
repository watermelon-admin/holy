@page
@model AdminModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="text-center">
    <h1 class="text-4xl font-bold text-gray-900 mb-4">Admin Dashboard</h1>
    <p class="text-lg text-gray-600 mb-8">This is a protected page that requires authentication.</p>

    @if (User.Identity?.IsAuthenticated == true)
    {
        <div class="bg-green-100 border border-green-400 text-green-700 px-6 py-4 rounded-lg mb-8 max-w-2xl mx-auto">
            <h4 class="text-xl font-semibold mb-2">Welcome, @User.Identity.Name!</h4>
            <p class="text-green-600">You are successfully authenticated and can access this protected area.</p>
        </div>

        <div class="text-left max-w-6xl mx-auto">
            <h3 class="text-2xl font-bold text-gray-900 mb-4 text-center">Break Management</h3>
            <p class="text-gray-600 text-center mb-8">Here you would manage break types, durations, and settings for BreakScreen.</p>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div class="bg-white border border-gray-200 rounded-lg shadow-md p-6 hover:shadow-lg transition duration-200">
                    <div class="flex items-center justify-center w-12 h-12 bg-breakscreen-primary bg-opacity-10 rounded-lg mb-4">
                        <svg class="w-6 h-6 text-breakscreen-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                    <h5 class="text-xl font-semibold text-gray-900 mb-2">Break Types</h5>
                    <p class="text-gray-600 mb-4">Manage different types of breaks (Coffee, Lunch, Lab, etc.)</p>
                    <button class="bg-breakscreen-primary text-white px-4 py-2 rounded-md font-medium opacity-50 cursor-not-allowed" disabled>
                        Manage Break Types
                    </button>
                </div>

                <div class="bg-white border border-gray-200 rounded-lg shadow-md p-6 hover:shadow-lg transition duration-200">
                    <div class="flex items-center justify-center w-12 h-12 bg-breakscreen-accent bg-opacity-10 rounded-lg mb-4">
                        <svg class="w-6 h-6 text-breakscreen-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064"></path>
                        </svg>
                    </div>
                    <h5 class="text-xl font-semibold text-gray-900 mb-2">Time Zones</h5>
                    <p class="text-gray-600 mb-4">Configure time zones for break end times</p>
                    <button class="bg-breakscreen-accent text-white px-4 py-2 rounded-md font-medium opacity-50 cursor-not-allowed" disabled>
                        Configure Time Zones
                    </button>
                </div>

                <div class="bg-white border border-gray-200 rounded-lg shadow-md p-6 hover:shadow-lg transition duration-200">
                    <div class="flex items-center justify-center w-12 h-12 bg-breakscreen-secondary bg-opacity-10 rounded-lg mb-4">
                        <svg class="w-6 h-6 text-breakscreen-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                    </div>
                    <h5 class="text-xl font-semibold text-gray-900 mb-2">Settings</h5>
                    <p class="text-gray-600 mb-4">General application settings and preferences</p>
                    <button class="bg-breakscreen-secondary text-white px-4 py-2 rounded-md font-medium opacity-50 cursor-not-allowed" disabled>
                        Manage Settings
                    </button>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="bg-yellow-100 border border-yellow-400 text-yellow-700 px-6 py-4 rounded-lg max-w-lg mx-auto">
            <h4 class="text-xl font-semibold mb-2">Access Denied</h4>
            <p class="mb-4">You must be logged in to access this page.</p>
            <a href="/Account/Login" class="bg-breakscreen-primary hover:bg-blue-700 text-white px-4 py-2 rounded-md font-medium inline-block transition duration-200">Login</a>
        </div>
    }
</div>