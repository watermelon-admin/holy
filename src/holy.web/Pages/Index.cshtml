@page
@model IndexModel
@{
    ViewData["Title"] = "BreakScreen";
}

<div class="text-center">
    <div class="max-w-4xl mx-auto">
        <h1 class="text-5xl font-bold text-gray-900 mb-6">BreakScreen</h1>
        <p class="text-xl text-gray-600 mb-8">Professional Break Timer Application for Events, Courses, and Workshops</p>

        <div class="bg-white rounded-lg shadow-lg p-8 mb-8">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div class="text-center">
                    <div class="flex items-center justify-center w-16 h-16 bg-breakscreen-primary bg-opacity-10 rounded-full mx-auto mb-4">
                        <svg class="w-8 h-8 text-breakscreen-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    </div>
                    <h3 class="text-lg font-semibold text-gray-900 mb-2">Break Types</h3>
                    <p class="text-gray-600">Coffee breaks, lunch breaks, lab sessions, and more</p>
                </div>

                <div class="text-center">
                    <div class="flex items-center justify-center w-16 h-16 bg-breakscreen-accent bg-opacity-10 rounded-full mx-auto mb-4">
                        <svg class="w-8 h-8 text-breakscreen-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                        </svg>
                    </div>
                    <h3 class="text-lg font-semibold text-gray-900 mb-2">QR Code Access</h3>
                    <p class="text-gray-600">Mobile companion view for attendees</p>
                </div>

                <div class="text-center">
                    <div class="flex items-center justify-center w-16 h-16 bg-breakscreen-secondary bg-opacity-10 rounded-full mx-auto mb-4">
                        <svg class="w-8 h-8 text-breakscreen-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064"></path>
                        </svg>
                    </div>
                    <h3 class="text-lg font-semibold text-gray-900 mb-2">Multi-Timezone</h3>
                    <p class="text-gray-600">Display end times across multiple timezones</p>
                </div>
            </div>
        </div>

        <div class="space-y-4 sm:space-y-0 sm:space-x-4 sm:flex sm:justify-center">
            @if (User.Identity?.IsAuthenticated == true)
            {
                <a asp-page="/Admin" class="block sm:inline-block bg-breakscreen-primary hover:bg-blue-700 text-white font-medium py-3 px-6 rounded-lg transition duration-200">
                    Go to Dashboard
                </a>
            }
            else
            {
                <a asp-page="/Account/Register" class="block sm:inline-block bg-breakscreen-primary hover:bg-blue-700 text-white font-medium py-3 px-6 rounded-lg transition duration-200">
                    Get Started
                </a>
                <a asp-page="/Account/Login" class="block sm:inline-block bg-white hover:bg-gray-50 text-gray-900 font-medium py-3 px-6 rounded-lg border border-gray-300 transition duration-200">
                    Sign In
                </a>
            }
        </div>
    </div>
</div>
