@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="max-w-md mx-auto bg-white rounded-lg shadow-md p-6">
    <h2 class="text-2xl font-bold text-gray-900 text-center mb-6">@ViewData["Title"]</h2>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
            @Model.ErrorMessage
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
            @Model.SuccessMessage
        </div>
    }

    <form method="post" class="space-y-4">
        <div asp-validation-summary="All" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded text-sm"></div>

        <div>
            <label asp-for="Input.Username" class="block text-sm font-medium text-gray-700 mb-1">Username</label>
            <input asp-for="Input.Username" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-breakscreen-primary focus:border-breakscreen-primary transition duration-200" />
            <span asp-validation-for="Input.Username" class="text-red-600 text-sm mt-1 block"></span>
        </div>

        <div>
            <label asp-for="Input.Email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
            <input asp-for="Input.Email" type="email" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-breakscreen-primary focus:border-breakscreen-primary transition duration-200" />
            <span asp-validation-for="Input.Email" class="text-red-600 text-sm mt-1 block"></span>
        </div>

        <div>
            <label asp-for="Input.Password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
            <input asp-for="Input.Password" type="password" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-breakscreen-primary focus:border-breakscreen-primary transition duration-200" />
            <span asp-validation-for="Input.Password" class="text-red-600 text-sm mt-1 block"></span>
        </div>

        <div>
            <label asp-for="Input.ConfirmPassword" class="block text-sm font-medium text-gray-700 mb-1">Confirm Password</label>
            <input asp-for="Input.ConfirmPassword" type="password" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-breakscreen-primary focus:border-breakscreen-primary transition duration-200" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-red-600 text-sm mt-1 block"></span>
        </div>

        <button type="submit" class="w-full bg-breakscreen-primary hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md transition duration-200 focus:outline-none focus:ring-2 focus:ring-breakscreen-primary focus:ring-offset-2">
            Register
        </button>
    </form>

    <div class="mt-6 pt-6 border-t border-gray-200 text-center">
        <p class="text-sm text-gray-600">
            <a asp-page="./Login" class="text-breakscreen-primary hover:text-blue-700 font-medium">Already have an account? Login here</a>
        </p>
    </div>
</div>