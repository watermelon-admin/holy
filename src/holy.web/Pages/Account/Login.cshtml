@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="max-w-md mx-auto bg-white rounded-lg shadow-md p-6">
    <h2 class="text-2xl font-bold text-gray-900 text-center mb-6">@ViewData["Title"]</h2>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
            @Model.ErrorMessage
        </div>
    }

    <form method="post" class="space-y-4">
        <div>
            <label asp-for="Input.Username" class="block text-sm font-medium text-gray-700 mb-1">Username</label>
            <input asp-for="Input.Username" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-breakscreen-primary focus:border-breakscreen-primary transition duration-200" />
        </div>

        <div>
            <label asp-for="Input.Password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
            <input asp-for="Input.Password" type="password" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-breakscreen-primary focus:border-breakscreen-primary transition duration-200" />
        </div>

        <div class="flex items-center">
            <input asp-for="Input.RememberMe" type="checkbox" class="h-4 w-4 text-breakscreen-primary focus:ring-breakscreen-primary border-gray-300 rounded" />
            <label asp-for="Input.RememberMe" class="ml-2 text-sm text-gray-700">Remember me</label>
        </div>

        <button type="submit" class="w-full bg-breakscreen-primary hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md transition duration-200 focus:outline-none focus:ring-2 focus:ring-breakscreen-primary focus:ring-offset-2">
            Login
        </button>
    </form>

    <div class="mt-6 pt-6 border-t border-gray-200">
        <div class="bg-blue-50 border border-blue-200 text-blue-700 px-4 py-3 rounded">
            <div class="font-medium text-sm mb-1">Test Credentials:</div>
            <div class="text-sm">
                Username: <code class="bg-blue-100 px-1 rounded">admin</code><br />
                Password: <code class="bg-blue-100 px-1 rounded">admin</code>
            </div>
        </div>
    </div>
</div>